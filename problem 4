// Jean Piolo C. Ong, Experiment 2, Problem 4
#include <iostream>

using namespace std;

int main ()
{
int x, y, z;

cout << "Enter first number: ";
cin >> x;
cout << "Enter second number: ";
cin >> y;

cout << "Enter third number: " ;
cin >> z;

 if(x >= y && x >= z)
    {
        cout << "Largest number: " << x;
    }

    if(y >= x && y >= z)
    {
        cout << "Largest number: " << y;
    }

    if(z >= x && z >= y) {
        cout << "Largest number: " << z;
    }

    return 0;
}
	
