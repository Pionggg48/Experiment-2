// Jean Piolo C. Ong, Experiment 2, Problem 7

#include <iostream>
#include <conio.h>
using namespace std;

int main()
{
    int n, sum = 0;

    cout << "Enter a number: ";
    cin >> n;

    for (int i = 1; i <= n; i++) {
        sum += i;
    }

    cout << "Sum of the numbers from 1 to "<< n << " is " << sum;
    return 0;
}
